<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/book_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/books"/>

            <TextView
                android:id="@+id/list_item_book_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_photo"
                android:padding="4dp"
                android:textStyle="bold"
                tools:text="The Lean Startup"/>

            <TextView
                android:id="@+id/list_item_book_author_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_book_title_text_view"
                android:layout_toRightOf="@+id/book_photo"
                android:padding="4dp"
                tools:text="Eric Ries"/>

            <TextView
                android:id="@+id/list_item_book_progress_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_book_author_text_view"
                android:layout_toRightOf="@+id/book_photo"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:textStyle="bold"
                tools:text="74"/>

            <TextView
                android:id="@+id/list_item_book_started_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_book_author_text_view"
                android:layout_toRightOf="@+id/list_item_book_progress_text_view"
                android:paddingTop="4dp"
                android:gravity="bottom"
                android:textStyle="italic"
                android:text="%"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>