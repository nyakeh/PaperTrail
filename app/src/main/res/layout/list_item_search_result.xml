<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/list_item_separation"
    android:paddingLeft="@dimen/auxiliary_margin"
    android:paddingRight="@dimen/auxiliary_margin"
    android:paddingTop="@dimen/list_item_separation">

    <TextView
        android:id="@+id/list_item_book_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Title:"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/list_item_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_book_title_label"
        android:padding="2dp"
        android:textStyle="bold"
        tools:text="The Lean Startup"/>

    <TextView
        android:id="@+id/list_item_book_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_title"
        android:padding="2dp"
        android:text="Author:"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/list_item_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_title"
        android:layout_toRightOf="@+id/list_item_book_author_label"
        android:padding="2dp"
        android:textStyle="bold"
        tools:text="Eric Ries"/>

    <TextView
        android:id="@+id/list_item_book_finished_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_author"
        android:padding="2dp"
        android:text="ISBN:"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/list_item_book_date_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_author"
        android:layout_toRightOf="@+id/list_item_book_finished_label"
        android:padding="2dp"
        android:textStyle="bold"
        tools:text="0141970170"/>

</RelativeLayout>