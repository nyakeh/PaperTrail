<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/list_item_book_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        tools:src="@drawable/books"/>

    <TextView
        android:id="@+id/list_item_book_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_book_image"
        android:padding="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Title:"/>

    <TextView
        android:id="@+id/list_item_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_book_title_label"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="The Lean Startup"/>

    <TextView
        android:id="@+id/list_item_book_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_title"
        android:layout_toRightOf="@+id/list_item_book_image"
        android:padding="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Author:"/>

    <TextView
        android:id="@+id/list_item_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_title"
        android:layout_toRightOf="@+id/list_item_book_author_label"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Eric Ries"/>

    <TextView
        android:id="@+id/list_item_book_finished_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_author"
        android:layout_toRightOf="@+id/list_item_book_image"
        android:padding="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Finished:"/>

    <TextView
        android:id="@+id/list_item_book_date_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_book_author"
        android:layout_toRightOf="@+id/list_item_book_finished_label"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:textStyle="bold"
        tools:text="MONDAY, OCT 19, 2005"/>

</RelativeLayout>