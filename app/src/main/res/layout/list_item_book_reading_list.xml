<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="@color/colorPrimaryLight"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_item_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_book_title"
            android:layout_toRightOf="@+id/list_item_book_author_label"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:text="Eric Ries"/>

        <TextView
            android:id="@+id/list_item_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_book_title_label"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="The Lean Startup"/>

    </LinearLayout>
</android.support.v7.widget.CardView>